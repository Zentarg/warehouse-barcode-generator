{
  "name": "warehouse-barcode-generator",
  "version": "1.0.3",
  "main": "main.js",
  "author": {
    "name": "Andreas Giehm",
    "email": "apg.chili@gmail.com"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "dist": "ng build && electron-builder",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:warehouse-barcode-generator": "node dist/warehouse-barcode-generator/server/server.mjs"
  },
  "build": {
    "appId": "zentarg.warehouse-barcode-generator",
    "productName": "Warehouse Barcode Generator",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/warehouse-barcode-generator/browser/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "zentarg",
        "repo": "warehouse-barcode-generator"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/platform-server": "^18.1.0",
    "@angular/router": "^18.1.0",
    "@angular/ssr": "^18.1.4",
    "bootstrap-icons": "^1.11.3",
    "bwip-js": "^4.5.1",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.4",
    "@angular/cli": "^18.1.4",
    "@angular/compiler-cli": "^18.1.0",
    "@types/bwip-js": "^3.2.3",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2"
  }
}
